<Window x:Class="Database.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Database"
        mc:Ignorable="d"
        Title="Creation des bases de donnees" Height="600" Width="800">
    <Grid>
        <Label x:Name="creationDBLabel" Content="Creation d'une base de donnees" HorizontalAlignment="Left" Margin="261,67,0,0" VerticalAlignment="Top" Height="50" Width="270" FontSize="18" FontFamily="Tahoma" RenderTransformOrigin="0.023,0.357"/>
        <Button x:Name="createDBbtn" Content="Create New DataBase" HorizontalAlignment="Left" Margin="319,209,0,0" VerticalAlignment="Top" Width="157" Height="48" FontSize="14" FontFamily="Tahoma" RenderTransformOrigin="0.519,0.449" Click="createDBbtn_Click"/>
        <Button x:Name="addTablebtn" Content="Add Table" HorizontalAlignment="Left" Height="57" Margin="571,332,0,0" VerticalAlignment="Top" Width="178" FontSize="14" FontFamily="Tahoma" Click="addTablebtn_Click"/>
        <Label x:Name="currentDBLabel" Content="" HorizontalAlignment="Left" Height="125" Margin="45,332,0,0" VerticalAlignment="Top" Width="486" FontSize="14" FontFamily="Tahoma"/>

    </Grid>
</Window>
